<div class="row">
​
  <div class="col-md-4">
    <div class="list-group">
      {{#each model as |note|}}
      {{#link-to 'notes.note' note class="list-group-item"}}
        <h4 class="list-group-item-heading">{{note.id}}</h4>
      {{/link-to}}
      {{/each}}
    </div>
  </div>

  <div class="col-md-8">
    {{outlet}}
  </div>
​
</div>

  <div class="row">
    <form>
    <div class="form-group">
      <label for='title'>Title</label>
      {{input value=newNoteTitle id="title id" class="form-control"}}
    </div>
    <div class="form-group">
      <label for='content'>Content</label>
      {{input value=newNoteContent id="content id" class="form-control"}}
    </div>
      <button class="btn btn-default btn-primary" {{action "createNote"}} type="submit">Create</button>
    </form>
  </div>
  
